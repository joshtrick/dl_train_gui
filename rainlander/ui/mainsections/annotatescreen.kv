<FuncButton@Button>:
  size_hint: None, None
  size: 150, 30
  background_disabled_normal: 'atlas://data/images/defaulttheme/button'

<AnnotateScreen>:
  name: 'annot_scr'
  GridLayout:
    padding: [5, 0, 5, 0]
    id: main_pannel
    spacing: 10
    cols: 2
    Label:
      size_hint: None, None
      size: 150, 30
      text_size: self.size
      halign: 'left'
      valign: 'center'
      text: 'Labelme'
    FuncButton:
      id: run_labelme_btn
      size_hint: None, None
      size: 150, 30
      text: 'Run Labelme'
      on_release:
        root.create_func_thread(root.run_labelme)
        root.run_func_t.start()

    FuncButton:
      text: 'Dataset Path'
      size_hint: None, None
      size: 150, 30
      on_release: root.show_filechosser(text_input_id = "param_dataset_path", choose_path = True)
    TextInput:
      id: param_dataset_path
      multiline: False
      size_hint: None, None
      size: 500, 30

    Label:
      size_hint: None, None
      size: 150, 30
      text_size: self.size
      halign: 'left'
      valign: 'center'
      text: 'Generate Class List'
    FuncButton:
      id: run_class_generator_btn
      size_hint: None, None
      size: 150, 30
      text: 'Run Generator'
      on_release:
        root.create_func_thread(root.run_class_generator)
        root.run_func_t.start()
