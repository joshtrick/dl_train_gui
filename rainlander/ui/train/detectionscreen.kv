<DetectionScreen>:
  name: 'det_scr'

  ScrollView:
    do_scroll_y: True
    do_scroll_x: True
    GridLayout:
      spacing: 10
      padding: [20, 0, 0, 0]
      size_hint: None, None
      width: self.minimum_width
      height: self.minimum_height
      cols: 2

      Label:
        text: 'Detector'
        size_hint: None, None
        text_size: self.size
        halign: 'left'
        valign: 'center'
        size: 150, 30
      # Dropdown in kv file
      BoxLayout:
        # trick to not lost the Dropdown instance
        # Dropdown itself is not really made to be used in kv.
#        __safe_id: [dropdown.__self__]
        Button:
          id: model_selector
          text: 'Choose a Model'
          on_release: dropdown.open(self)
          size_hint: None, None
          size: 150, 30
        Widget:
          on_parent: dropdown.dismiss()
        DropDown:
          id: dropdown
          on_select: model_selector.text = '{}'.format(args[1])
          Button:
            text: 'yolo'
            size_hint: None, None
            size: 150, 30
            on_release: dropdown.select(self.text)
          Button:
            text: 'ssd'
            size_hint: None, None
            size: 150, 30
            on_release: dropdown.select(self.text)

      Label:
        text: 'Parameter 01 [' + str(parameter01.value) + ']'
        size_hint: None, None
        text_size: self.size
        halign: 'left'
        valign: 'center'
        size: 150, 30
      Slider:
        size_hint: None, None
        size: 400, 30
        cursor_size: 20, 20
        id: parameter01
        min: 0
        step: 1
        max: 100

      Label:
        text: 'Parameter 02 [' + parameter02.text + ']'
        size_hint: None, None
        text_size: self.size
        halign: 'left'
        valign: 'center'
        size: 150, 30
      TextInput:
        id: parameter02
        text: '0.5'
        multiline: False
        size_hint: None, None
        size: 150, 30

      Button:
        text: 'Select File'
        size_hint: None, None
        size: 150, 30
        on_release: root.show_filechosser(text_input_id = "filepath01")
      TextInput:
        id: filepath01
        multiline: False
        size_hint: None, None
        size: 400, 30

      Button:
        text: 'Select Folder'
        size_hint: None, None
        size: 150, 30
        on_release: root.show_filechosser(text_input_id = "folderpath01", choose_path = True)
      TextInput:
        id: folderpath01
        multiline: False
        size_hint: None, None
        size: 400, 30

      # ********Testing********
      Label:
        text: 'Testing'
        size_hint: None, None
        text_size: self.size
        halign: 'left'
        valign: 'center'
        size: 150, 500
      Label:
        text: 'Testing'
        size_hint: None, None
        text_size: self.size
        halign: 'left'
        valign: 'center'
        size: 150, 500

