#:import os os
<DetectionScreen>:
  name: 'det_scr'

  ScrollView:
    do_scroll_y: True
    do_scroll_x: True
    BoxLayout:
      spacing: 20
      padding: [20, 0, 0, 0]
      size_hint: None, None
      width: self.minimum_width
      height: self.minimum_height
      orientation: 'horizontal'
#cols: 2

      GridLayout:
        spacing: 10
        size_hint: None, None
        width: self.minimum_width
        height: self.minimum_height
        cols: 2
        # ********Parameter********
        Label:
          text: 'Detector'
          size_hint: None, None
          text_size: self.size
          halign: 'left'
          valign: 'center'
          size: 150, 30
        # Dropdown in kv file
        BoxLayout:
          # trick to not lost the Dropdown instance
          # Dropdown itself is not really made to be used in kv.
          __safe_id: [dropdown.__self__]
          Button:
            id: param_model_selector
            text: 'Choose a Model'
            on_release: dropdown.open(self)
            size_hint: None, None
            size: 150, 30
          Widget:
            on_parent: dropdown.dismiss()
          DropDown:
            id: dropdown
            on_select: param_model_selector.text = '{}'.format(args[1])
            Button:
              text: 'yolo'
              size_hint: None, None
              size: 150, 30
              on_release: dropdown.select(self.text)
            Button:
              text: 'ssd'
              size_hint: None, None
              size: 150, 30
              on_release: dropdown.select(self.text)

        # ********Parameter********
        Button:
          text: 'Model File'
          size_hint: None, None
          size: 150, 30
          on_release: root.show_filechosser(text_input_id = "param_checkpoint_path")
        TextInput:
          id: param_checkpoint_path
          multiline: False
          size_hint: None, None
          size: 500, 30

        # ********Parameter********
        Label:
          text: 'Encrypted Model File'
          size_hint: None, None
          text_size: self.size
          halign: 'left'
          valign: 'center'
          size: 150, 30
        BoxLayout:
          size_hint: None, None
          size: 30, 30
          CheckBox:
            id: param_encrypted_initial_checkpoint
            active: False

        # ********Parameter********
        Button:
          text: 'Project Path'
          size_hint: None, None
          size: 150, 30
          on_release: root.show_filechosser(text_input_id = "param_train_dir", choose_path = True)
        TextInput:
          id: param_train_dir
          text: os.getcwd()
          multiline: False
          size_hint: None, None
          size: 500, 30

        # ********Parameter********
        Label:
          text: 'Number of Classes'
          size_hint: None, None
          text_size: self.size
          halign: 'left'
          valign: 'center'
          size: 150, 30
        TextInput:
          id: param_num_classes
          text: "1"
          multiline: False
          size_hint: None, None
          size: 500, 30

#        # ********Parameter********
#        Label:
#          text: 'Model Scale'
#          size_hint: None, None
#          text_size: self.size
#          halign: 'left'
#          valign: 'center'
#          size: 150, 30
#        GridLayout:
#          id: prarm_model_scale
#          cols: 3
#          ToggleButton:
#            group: 'model_scale'
#            text: 'Small'
#            size_hint: None, None
#            size: 150, 30
#            state: 'down'
#          ToggleButton:
#            group: 'model_scale'
#            text: 'Middle'
#            size_hint: None, None
#            size: 150, 30
#          ToggleButton:
#            group: 'model_scale'
#            text: 'Large'
#            size_hint: None, None
#            size: 150, 30

        # ********Parameter********
        Label:
          text: 'GPUs to Use'
          size_hint: None, None
          text_size: self.size
          halign: 'left'
          valign: 'center'
          size: 150, 30
        TextInput:
          id: param_gpus
          text: "0"
          multiline: False
          size_hint: None, None
          size: 500, 30

        # ********Parameter********
        Label:
          text: 'Batch Size [' + str(param_batch_size.value) + ']'
          size_hint: None, None
          text_size: self.size
          halign: 'left'
          valign: 'center'
          size: 150, 30
        Slider:
          id: param_batch_size
          size_hint: None, None
          size: 400, 30
          cursor_size: 20, 20
          min: 1
          step: 1
          max: 256

        # ********Parameter********
        Label:
          text: 'Input Width'
          size_hint: None, None
          text_size: self.size
          halign: 'left'
          valign: 'center'
          size: 150, 30
        TextInput:
          id: param_input_w
          text: "416"
          multiline: False
          size_hint: None, None
          size: 500, 30

        # ********Parameter********
        Label:
          text: 'Input Height'
          size_hint: None, None
          text_size: self.size
          halign: 'left'
          valign: 'center'
          size: 150, 30
        TextInput:
          id: param_input_h
          text: "416"
          multiline: False
          size_hint: None, None
          size: 500, 30

        # ********Parameter********
        Button:
          text: 'Dataset Path'
          size_hint: None, None
          size: 150, 30
          on_release: root.show_filechosser(text_input_id = "param_image_dir", choose_path = True)
        TextInput:
          id: param_image_dir
          multiline: False
          size_hint: None, None
          size: 500, 30

        # ********Parameter********
        Button:
          text: 'Label Path'
          size_hint: None, None
          size: 150, 30
          on_release: root.show_filechosser(text_input_id = "param_label_path", choose_path = True)
        TextInput:
          id: param_label_path
          multiline: False
          size_hint: None, None
          size: 500, 30

        # ********Parameter********
        Button:
          text: 'Class List File'
          size_hint: None, None
          size: 150, 30
          on_release: root.show_filechosser(text_input_id = "param_class_name_path")
        TextInput:
          id: param_class_name_path
          multiline: False
          size_hint: None, None
          size: 500, 30

      GridLayout:
        spacing: 10
        size_hint: None, None
        pos_hint: {'top': 1}
        width: self.minimum_width
        height: self.minimum_height
        cols: 2
        # ********Parameter********
        Label:
          text: 'Preprocess Options'
          size_hint: None, None
          text_size: self.size
          halign: 'left'
          valign: 'center'
          size: 150, 30
        Label:
          size_hint: None, None
          size: 150, 30

        # ********Parameter********
        Label:
          text: 'Random Translate'
          size_hint: None, None
          text_size: self.size
          halign: 'left'
          valign: 'center'
          size: 150, 30
        BoxLayout:
          size_hint: None, None
          size: 30, 30
          CheckBox:
            id: param_random_translate
