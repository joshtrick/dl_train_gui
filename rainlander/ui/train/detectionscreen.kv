<DetectionScreen>:
  name: 'det_scr'
  GridLayout:
    rows: 2
    Button:
      id: model_selector
      text: 'yolo'
      size_hint: None, None
      size: 120, 30
    GridLayout:
      cols: 3
      Label:
        text: 'threshold'
      Slider:
        id: threshold
        min: 0
        step: 1
        max: 10
      Label:
        text: str(threshold.value)
