            active: False

        # ********Parameter********
        Label:
          text: 'Random Flip (V)'
          size_hint: None, None
          text_size: self.size
          halign: 'left'
          valign: 'center'
          size: 150, 30
        BoxLayout:
          size_hint: None, None
          size: 30, 30
          CheckBox:
            id: param_random_vertical_flip
            active: False

        # ********Parameter********
        Label:
          text: 'Random Rotation'
          size_hint: None, None
          text_size: self.size
          halign: 'left'
          valign: 'center'
          size: 150, 30
        BoxLayout:
          size_hint: None, None
          size: 30, 30
          CheckBox:
            id: param_random_rotation
            active: False

        # ********Parameter********
        Label:
          text: 'Shuffle Channels'
          size_hint: None, None
          text_size: self.size
          halign: 'left'
          valign: 'center'
          size: 150, 30
        BoxLayout:
          size_hint: None, None
          size: 30, 30
          CheckBox:
            id: param_random_shuffle_channel
            active: False

        # ********Parameter********
        Label:
          text: 'Convert to Gray'
          size_hint: None, None
          text_size: self.size
          halign: 'left'
          valign: 'center'
          size: 150, 30
        BoxLayout:
          size_hint: None, None
          size: 30, 30
          CheckBox:
            id: param_gray
            active: False
